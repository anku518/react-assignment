* {
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, Verdana, sans-serif;
  background-color: #000000;
}

header {
  background-color: #313131;
  padding: 30px;
  border: 8px solid #ccc; 
  border-radius: 4px; 
  text-align: center;
  color: #A6A6A6;
  font-size: 20px;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
}

.mainbody {
  display: flex;
  width: 100%;
  background-color: #656565;
  border: 8px solid #ccc;
  border-radius: 4px; 
}

main {
  width: 100%;
  padding: 20px;
  border-radius: 4px;
  border: 1px solid #ccc;
  background-color: #656565;
}

nav {
  float: left;
  width: 50%;
  background-color: #656565;
  border: 1px solid #ccc;
  border-radius: 2px;
  padding: 20px;
}

nav ul {
  /*list-style-type: none;*/
  padding: 0;
  color: #A6A6A6;
  margin: 0 0 0 -0.2125em;
  font-family: "Times New Roman", Times, serif;
  text-align: justify;
}

/* Style the footer */
footer {
  background-color: #313131;
  padding: 10px;
  border: 8px solid #ccc; 
  border-radius: 4px;
  text-align: center;
  color: #A6A6A6;
  font-size: 18px;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
}

/* Fake image */
.fakeimg {
  background-color: #3d3d3d;
  width: 100%;
  padding: 5px;
  border: 4px solid #ccc; 
  border-radius: 1px;
}

.fakeimg img {
  width: 100%;
  height: 200px;
  
}

/* Add a card effect for articles */
.card {
  background-color: #313131;
  padding: 20px;
  margin-top: 20px;
  border: 4px solid #ccc; 
  border-radius: 1px;
}

.card a {
	color: #A6A6A6;
	font-size: 20px;
	font-family: "Times New Roman", Times, serif;
}

.card span p {
	margin-right: 10px;
  color: #A6A6A6;
  font-size: 14px;
  font-family: "Times New Roman", Times, serif;
}

.post-foot {
  display: flex;
}

.post-foot p {
	color: #A6A6A6;
	font-size: 14px;
	text-align: justify;
	font-family: "Times New Roman", Times, serif;
}

.post-date {
  font-weight: bolder;
  margin-right: 10px;
  color: #A6A6A6;
  font-size: 14px;
  font-family: "Times New Roman", Times, serif;
}

.postContainer {
  padding: 30px;
}

.postContainer .card{
  border-radius: 20px;
}

.postContainer .card .post-foot {
  display: inline-block;
  
}

.postContainer .card .post-foot img{
  height: 300px;
  padding: 5px;
  border-radius: 10px;
}

.postContainer .card .post-foot p{
  text-align: justify;
  font-size: 18px;
  font-family: 'Trebuchet MS', sans-serif;
}

.mainPage {
  font-size: 25px;
  color: #A6A6A6;
  padding: 5px;
  border: 2px solid #ccc; 
  border-radius: 4px;
  font-family: "Times New Roman", Times, serif;
  text-align: center;
  background-color: #313131;
  text-decoration: underline;
}

.newsSection {
  display: flex;
  flex-direction: column;
  background: #313131;
  padding: 20px;
  border-radius: 10px;
}

.newsSection h2 {
	color: #C4C4C9;
	padding: 5px;
	border: 8px solid #ccc; 
	border-radius: 4px;
	font-size: 20px;
	text-decoration: underline;
	font-family: "Times New Roman", Times, serif;
	text-align: center;
}

.newsSection .techApi {
  margin-bottom: 10px;
  color: #C4C4C9;
  text-align: justify;
  font-family: "Times New Roman", Times, serif;
}

/* Responsive layout */
@media (max-width: 600px) {
  nav,
  article {
    width: 100%;
    height: auto;
  }
}
